<h2>Create a New Appearance</h2>
<%= form_for @appearance do |f| %>
  <%= f.collection_select :guest_id, Guest.all, :id, :name %> <br>
  <%= f.collection_select :episode_id, Episode.all, :id, :name %> <br>
  <%= f.label :rating %> <br>
  <%= f.number_field :rating %> <br>
  <%= f.submit %>

<% end %>
